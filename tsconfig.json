{
  "compilerOptions": {
    "outDir": "./lib",
    "lib": ["DOM", "ESNext"],
    "target": "ES2015",
    "module": "ESNext",
    "declaration": true,
    "noImplicitAny": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"],
  "include": ["./src"]
}
